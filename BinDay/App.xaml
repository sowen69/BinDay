<Application 
    x:Class="BinDay.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:local="clr-namespace:BinDay" 
	xmlns:Localization="clr-namespace:BinDay.Localization">

    <!--Application Resources-->
    <Application.Resources>
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
    			<ResourceDictionary Source="Views/TemplatesAndStylesResourceDictionary.xaml"/>
    		</ResourceDictionary.MergedDictionaries>
    		<local:AppBootstrapper x:Key="bootstrapper"/>
    		<Localization:LocalizedStrings x:Key="LocalizedStrings" />
    	</ResourceDictionary>
    </Application.Resources>
</Application>